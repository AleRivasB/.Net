                    $('#apellido').val(empleado.apellido);
                    $('#email').val(empleado.email);
                    $('#dui').val(empleado.dui);
                    $('#numeroTel').val(empleado.numeroTelefonico);

                    $('#tipoEmpleadoId').val(empleado.tipoEmpleadoId);

